{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/packages/server",
    "declarationDir": "../../dist/packages/server",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "skipLibCheck": true
  },
  "files": ["./package.json"],
  "include": ["**/*.ts", "./package.json"],
  "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts"]
}
