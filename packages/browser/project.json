{
  "name": "browser",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/browser/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/browser",
        "main": "packages/browser/src/index.ts",
        "tsConfig": "packages/browser/tsconfig.lib.json",
        "packageJson": "packages/browser/src/package.json",
        "external": "all",
        "externalBuildTargets": [
          "@elegante/sdk",
          "@reduxjs/toolkit",
          "rxjs",
          "redux-watch",
          "immer"
        ]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs browser {args.v} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/browser/jest.config.ts"
      }
    }
  },
  "tags": ["consumer"]
}
