{
  "name": "db",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/db",
  "projectType": "application",
  "targets": {
    "bundle": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["docker build -f ./apps/db/Dockerfile -t insta-db ."]
      }
    },
    "push": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker tag insta-db intenseloop/insta-db:latest",
          "docker push intenseloop/insta-db:latest"
        ]
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker network create insta-net || true",
          "docker rm -f insta-mongo-db || true",
          "docker run -d --name insta-mongo-db -p 27018:27017 --network insta-net -v ./apps/db/data:/data/db -v ./apps/db/config:/config --restart always insta-db"
        ],
        "parallel": false
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["kamal accessory boot -c apps/db/deploy.yml"],
        "parallel": false
      }
    },
    "redeploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "kamal accessory remove db -c apps/db/deploy.yml",
          "kamal accessory boot db -c apps/db/deploy.yml"
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
