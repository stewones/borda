{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker build -f ./apps/api/Dockerfile -t insta-server-demo ."
        ]
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["docker run --env-file ./apps/api/.env insta-server-demo"]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx types server",
          "bun run --env-file apps/api/.env --watch apps/api/src/main.ts"
        ]
      }
    },
    "types": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --noEmit --skipLibCheck --showConfig -p apps/api/tsconfig.lib.json"
        ]
      }
    },
    "compile": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx types server",
          "bun build --compile --minify --sourcemap ./apps/api/index.ts --outfile server"
        ]
      }
    },
    "inspect": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx types server",
          "bun run --watch --inspect apps/server/index.ts"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": []
}
