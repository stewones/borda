{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "bundle": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["docker build -f ./apps/api/Dockerfile -t insta-api ."]
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker network create insta-net || true",
          "docker rm -f insta-api || true",
          "docker run -p 1337:1337 -d --network insta-net --name insta-api --env-file ./.env insta-api"
        ],
        "parallel": false
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["kamal deploy -c apps/api/deploy.yml"],
        "parallel": false
      }
    },
    "redeploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["kamal redeploy -c apps/api/deploy.yml"],
        "parallel": false
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx types api",
          "bun run --env-file .env --watch apps/api/src/main.ts"
        ],
        "parallel": false
      }
    },
    "types": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --noEmit --skipLibCheck --showConfig -p apps/api/tsconfig.lib.json"
        ]
      }
    },
    "compile": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx types server",
          "bun build --compile --minify --sourcemap ./apps/api/index.ts --outfile server"
        ]
      }
    },
    "inspect": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx types server",
          "bun run --watch --inspect apps/server/index.ts"
        ]
      }
    },
    "prune": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["kamal prune all -c apps/api/deploy.yml"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "logs": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["kamal app logs -c apps/api/deploy.yml"],
        "parallel": false
      }
    }
  },
  "tags": []
}
